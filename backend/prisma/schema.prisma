generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model materiasprimas {
  id            Int    @id @default(autoincrement())
  nombre        String
  cantidadStock Int
}

model proveedores {
  id            Int      @id @default(autoincrement())
  nombre        String
  apellido      String
  cuilCuit      String
  direccion     String
  localidad     String
  provincia     String
  telefono      String
  correo        String
  fechaRegistro DateTime @db.Date
  descripcion   String
  habilitado    Boolean
}
